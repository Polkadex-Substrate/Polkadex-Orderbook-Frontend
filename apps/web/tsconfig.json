{
  "extends": "@orderbook/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@orderbook/core/*": ["../../packages/core/src/*"],
      "@/*": ["./src/*"],
      "@polkadex/orderbook-ui/templates":[
        "./src/ui/templates"
     ],
     "@polkadex/orderbook-ui/templates/*":[
        "./src/ui/templates/*"
     ],
     "@polkadex/orderbook-ui/organisms":[
        "./src/ui/organisms"
     ],
     "@polkadex/orderbook-ui/organisms/*":[
        "./src/ui/organisms/*"
     ],
     "@polkadex/orderbook-ui/atoms":[
        "./src/ui/atoms"
     ],
     "@polkadex/orderbook-ui/atoms/*":[
        "./src/ui/atoms/*"
     ],
     "@polkadex/orderbook-ui/molecules":[
        "./src/ui/molecules"
     ],
     "@polkadex/orderbook-ui/molecules/*":[
        "./src/ui/molecules/*"
     ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "public"],
  "files":["src/styles/styled.d.ts"]
}

