{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
      "scripthost",
      "webworker",
      "es5",
      "es7",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@polkadex/orderbook-modules": ["src/modules"],
      "@polkadex/orderbook-hooks": ["src/hooks"],
      "@polkadex/web-helpers": ["src/helpers"],
      "@polkadex/web-constants": ["src/constants"],
      "@polkadex/orderbook-config": ["src/config"],
      "lib/*": ["./src/lib/*"],
      "src/*": ["./src/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx" ],
  "exclude": [
    "node_modules",
    "public",
    "mocks",
    "__mocks__",
    "scripts",
    "spec",
    "jest.config.js",
    "webpack",
    "./src/*.test.*",
    "./src/charting_library"
  ],
  "files": ["src/styles/styled.d.ts"]
}
